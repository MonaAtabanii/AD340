<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainActivity">

    <fragment
        android:id="@+id/MainActivity"
        android:name="com.example.signupform.MainActivity"
        android:label="@string/regForm"
        tools:layout="@layout/activity_main">

        <action
            android:id="@+id/action_form_to_thanks"
            app:destination="@id/ThanksRegistered" />
    </fragment>
    <fragment
        android:id="@+id/ThanksRegistered"
        android:name="com.example.signupform.ThanksRegistered"
        android:label="@string/thanks_registered"
        tools:layout="@layout/thanks_registered">

        <action
            android:id="@+id/action_thanks_to_form"
            app:destination="@id/MainActivity" />
    </fragment>
</navigation>